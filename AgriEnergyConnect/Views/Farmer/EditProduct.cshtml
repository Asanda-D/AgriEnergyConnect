@model AgriEnergyConnect.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
            <h4>Edit Product</h4>
        </div>
        <div class="card-body">
            <form asp-action="EditProduct" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="FarmerId" />
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Category"></label>
                    <input asp-for="Category" class="form-control" />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="ProductionDate"></label>
                    <input asp-for="ProductionDate" type="date" class="form-control" />
                    <span asp-validation-for="ProductionDate" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">Update</button>
                    <a asp-action="Products" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}