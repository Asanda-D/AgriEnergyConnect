@model IEnumerable<AgriEnergyConnect.Models.Product>

@{
    ViewData["Title"] = "My Products";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>My Products</h2>
        <a class="btn btn-success" asp-action="AddProduct">Add New Product</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            You have not added any products yet. Click "Add New Product" to get started.
        </div>
    }
    else
    {
        <table class="table table-bordered table-striped shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Production Date</th>
                    <th style="width: 150px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Category</td>
                        <td>@product.ProductionDate.ToShortDateString()</td>
                        <td>
                        <a asp-action="EditProduct" asp-route-id="@product.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                        <a asp-action="DeleteProduct" asp-route-id="@product.Id" class="btn btn-sm btn-outline-danger ms-2">Delete</a>
                    </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>