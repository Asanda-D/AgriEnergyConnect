@model AgriEnergyConnect.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-5">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h4>Confirm Product Deletion</h4>
        </div>
        <div class="card-body">
            <p>Are you sure you want to delete this product?</p>
            <dl class="row">
                <dt class="col-sm-3">Name:</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Category:</dt>
                <dd class="col-sm-9">@Model.Category</dd>

                <dt class="col-sm-3">Production Date:</dt>
                <dd class="col-sm-9">@Model.ProductionDate.ToShortDateString()</dd>
            </dl>

            <form asp-action="DeleteProductConfirmed" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Products" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>