@model IEnumerable<AgriEnergyConnect.Models.Farmer>
@{
    ViewData["Title"] = "All Farmers";
}

<h2>All Farmers</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Location</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var farmer in Model)
        {
            <tr>
                <td>@farmer.FullName</td>
                <td>@farmer.Email</td>
                <td>@farmer.Location</td>
                <td>
                    <a asp-action="DeleteFarmer" asp-route-id="@farmer.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="AddFarmer" class="btn btn-primary">Add New Farmer</a>