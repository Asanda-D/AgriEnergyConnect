@model AgriEnergyConnect.Models.Farmer

@{
    ViewData["Title"] = "Delete Farmer";
}

<div class="container mt-5">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h4>Confirm Deletion</h4>
        </div>
        <div class="card-body">
            <p>Are you sure you want to delete this farmer?</p>
            <dl class="row">
                <dt class="col-sm-3">Name:</dt>
                <dd class="col-sm-9">@Model.FullName</dd>

                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Location:</dt>
                <dd class="col-sm-9">@Model.Location</dd>
            </dl>

            <form asp-action="DeleteFarmerConfirmed" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Farmers" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>